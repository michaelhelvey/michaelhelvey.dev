---
import Layout from "@layouts/Layout.astro"
import Icon from "astro-icon"

type Props = { frontmatter: Frontmatter }

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title} description={frontmatter.summary}>
	<h1 class="font-bold text-4xl my-3 text-gray-900 dark:text-gray-100">
		{frontmatter.title}
	</h1>
	<p class="text-gray-600 dark:text-gray-400 text-xl">
		{frontmatter.subtitle}
	</p>
	<div class="flex items-center space-x-3 text-sm text-gray-500 my-4">
		<span>{frontmatter.date}</span>
		<span>Â·</span>
		<span>{frontmatter.readingTime.text}</span>
		<span
			title={`This post has ${frontmatter.readingTime.words} words.  Reading time is calculated using a default reading speed of 200 WPM.`}
		>
			<Icon name="mdi:information" class="h-3 w-3 text-neutral-600" />
		</span>
	</div>
	<div
		class="prose md:prose-lg dark:prose-invert max-w-none mt-6 font-serif dark:text-gray-100 text-black"
	>
		<slot />
	</div>
</Layout>
