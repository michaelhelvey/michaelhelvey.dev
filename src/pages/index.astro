---
import { Image } from "@astrojs/image/components"
import Layout from "@layouts/Layout.astro"
import Icon from "astro-icon"
import profilePicture from "../images/github_profile.jpg"
---

<Layout title="michaelhelvey.dev">
	<div class="flex flex-col items-center justify-center h-full">
		<div class="flex flex-col items-center justify-center">
			<Image
				src={profilePicture}
				alt="Michael Helvey Profile Picture"
				class="w-48 h-48 rounded-full object-center border-4 border-slate-300 shadow-sm"
			/>
			<h1 class="font-bold text-4xl text-slate-900 dark:text-slate-100 mt-6">
				Michael Helvey
			</h1>
			<p class="text-xl text-indigo-600 dark:text-slate-400 mt-2 text-center">
				full stack web developer, professional computer tinkerer
			</p>
			<p class="text-center mt-6 text-slate-700 dark:text-slate-300 text-lg">
				Welcome! I've been doing full stack web development professionally since
				jQuery. Check out my open source work, browse my blog posts, or get in
				touch.
			</p>
			<div
				class="mt-12 flex flex-col md:flex-row items-center justify-center md:space-x-12 space-y-4 md:space-y-0 text-slate-800 dark:text-slate-200"
			>
				<a
					href="https://github.com/michaelhelvey"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center space-x-3 border border-slate-300 rounded-lg p-3 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors duration-300"
				>
					<Icon name="akar-icons:github-fill" class="w-6 h-6" />
					<div>Github</div>
				</a>
				<a
					href="https://twitter.com/_michaelhelvey"
					target="_blank"
					rel="noopener noreferrer"
					class="flex items-center space-x-3 border border-slate-300 rounded-lg p-3 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors duration-300"
				>
					<Icon name="akar-icons:twitter-fill" class="w-6 h-6" />
					<div>Twitter</div>
				</a>
				<a
					href="/blog"
					class="flex items-center space-x-3 border border-slate-300 rounded-lg p-3 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors duration-300"
				>
					<Icon name="carbon:book" class="w-6 h-6" />
					<div>Blog</div>
				</a>
				<a
					href="/contact"
					class="flex items-center space-x-3 border border-slate-300 rounded-lg p-3 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors duration-300"
				>
					<Icon name="fluent:contact-card-16-filled" class="w-6 h-6" />
					<div>Contact</div>
				</a>
			</div>
		</div>
	</div>
</Layout>
