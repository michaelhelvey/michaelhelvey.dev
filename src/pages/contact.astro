---
import PageLayout from "@layouts/PageLayout.astro"
---

<PageLayout frontmatter={{ title: "Contact" }}>
	Hey, thanks for reaching out.
	<button
		id="email-link"
		class="relative after:absolute after:left-0 after:bottom-0 after:w-0 after:border-indigo-600 after:transition-all after:duration-300 hover:after:w-full hover:after:border-b after:dark:border-indigo-300 text-indigo-600 dark:text-indigo-400"
	>
		Here's my email.
	</button>
</PageLayout>

<script>
	let toggleState = false
	const email = "bWljaGFlbC5oZWx2ZXkxQGdtYWlsLmNvbQ=="
	const button = document.getElementById("email-link")
	const originalText = button?.innerText ?? ""

	button?.addEventListener("click", () => {
		if (toggleState) {
			button.innerText = originalText
			toggleState = false
		} else {
			button.innerText = `Here's my email: ${atob(email)}.`
			toggleState = true
		}
	})
</script>
